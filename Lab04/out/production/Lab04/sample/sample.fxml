<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.DatePicker?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          onMouseMoved="#phoneCheck" >

    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField id="nameField" fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"
               promptText="USERNAME" />

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <PasswordField id="passField" fx:id="passField" GridPane.columnIndex="1" GridPane.rowIndex="1"
               promptText="*********" />

    <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField id="fullNameField" fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"
               promptText="FULL NAME" />

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField id="emailField" fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3"
               promptText="EMAIL@EMAIL.COM" />

    <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField id="phoneField" fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="4"
               promptText="000-000-0000" />

    <Label text="Date of Birth:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <DatePicker id="datePicker" fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="5"
               promptText="dd/mm/yyyy" />

    <Button id="registerButton" fx:id="registerButton" text="Register" onAction="#buttonPress"
            GridPane.columnIndex="1" GridPane.rowIndex="6" />

</GridPane>